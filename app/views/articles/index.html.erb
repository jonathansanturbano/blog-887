<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<div class="row">
  <% @articles.each do |article| %>
    <% if article.photos.attached? %>
      <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path article.photos.first.key %>')">
        <%= article.title %>
      </div>
    <% else %>
      <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://www.ikea.com/au/en/images/products/mala-felt-tip-pen-mixed-colours__0710244_pe727426_s5.jpg?f=s')">
        <%= article.title %>
      </div>
    <% end %>
  <% end %>
</div>

